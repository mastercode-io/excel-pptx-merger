# Development Environment Configuration

# Application Mode
ENVIRONMENT=development
DEVELOPMENT_MODE=true
LOG_LEVEL=DEBUG

# Temporary File Management
CLEANUP_TEMP_FILES=false
TEMP_FILE_RETENTION_SECONDS=3600
TEMP_FILE_ENABLED=true
TEMP_FILE_KEEP_ON_ERROR=true
TEMP_FILE_DEVELOPMENT_MODE=true

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# API Configuration
API_KEY=dev_api_key_12345
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=xlsx,pptx
NORMALIZE_COLUMN_KEYS=true

# File Processing
TEMP_DIRECTORY=./.temp
IMAGE_EXTRACTION_ENABLED=true
IMAGE_MAX_SIZE_MB=10
SAVE_FILES=true

# Storage Configuration
STORAGE_BACKEND=LOCAL
LOCAL_STORAGE_DIR=./.temp

# Google Cloud Configuration (Development)
GOOGLE_CLOUD_PROJECT=excel-pptx-merger-dev
GOOGLE_CLOUD_BUCKET=excel-pptx-merger-dev-bucket
GOOGLE_CLOUD_FUNCTION=excel-pptx-merger-dev

# Zoho WorkDrive Configuration (Development)
ZOHO_CLIENT_ID=dev_client_id
ZOHO_CLIENT_SECRET=dev_client_secret
ZOHO_REFRESH_TOKEN=dev_refresh_token

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_ENABLED=false

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_REQUEST_LOGGING=true