# Production Environment Configuration

# Application Mode
ENVIRONMENT=production
DEVELOPMENT_MODE=false
LOG_LEVEL=INFO

# Temporary File Management
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION_SECONDS=300
TEMP_FILE_ENABLED=true
TEMP_FILE_KEEP_ON_ERROR=true
TEMP_FILE_DEVELOPMENT_MODE=false

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=8080

# API Configuration
# API_KEY=<SET_IN_PRODUCTION>
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=xlsx,pptx
NORMALIZE_COLUMN_KEYS=true

# File Processing
TEMP_DIRECTORY=/tmp/excel_pptx_merger
IMAGE_EXTRACTION_ENABLED=true
IMAGE_MAX_SIZE_MB=20
SAVE_FILES=true  # Enabled for monitoring during early release period

# Google Cloud Configuration (Production)
# GOOGLE_CLOUD_PROJECT=<SET_IN_PRODUCTION>
# GOOGLE_CLOUD_BUCKET=<SET_IN_PRODUCTION>
GOOGLE_CLOUD_FUNCTION=excel-pptx-merger

# Zoho WorkDrive Configuration (Production)
# ZOHO_CLIENT_ID=<SET_IN_PRODUCTION>
# ZOHO_CLIENT_SECRET=<SET_IN_PRODUCTION>
# ZOHO_REFRESH_TOKEN=<SET_IN_PRODUCTION>

# Security
# CORS_ORIGINS=<SET_IN_PRODUCTION>
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_REPORTING=true