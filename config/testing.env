# Testing Environment Configuration

# Application Mode
ENVIRONMENT=testing
DEVELOPMENT_MODE=false
LOG_LEVEL=INFO

# Temporary File Management
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION_SECONDS=60
TEMP_FILE_ENABLED=true
TEMP_FILE_KEEP_ON_ERROR=false
TEMP_FILE_DEVELOPMENT_MODE=false

# Flask Configuration
FLASK_ENV=testing
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5001

# API Configuration
API_KEY=test_api_key_67890
MAX_FILE_SIZE_MB=25
ALLOWED_EXTENSIONS=xlsx,pptx
NORMALIZE_COLUMN_KEYS=true

# File Processing
TEMP_DIRECTORY=/tmp/excel_pptx_merger_test
IMAGE_EXTRACTION_ENABLED=true
IMAGE_MAX_SIZE_MB=5

# Google Cloud Configuration (Testing)
GOOGLE_CLOUD_PROJECT=excel-pptx-merger-test
GOOGLE_CLOUD_BUCKET=excel-pptx-merger-test-bucket
GOOGLE_CLOUD_FUNCTION=excel-pptx-merger-test

# Zoho WorkDrive Configuration (Testing)
ZOHO_CLIENT_ID=test_client_id
ZOHO_CLIENT_SECRET=test_client_secret
ZOHO_REFRESH_TOKEN=test_refresh_token

# Security
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_PERFORMANCE_LOGGING=false
ENABLE_REQUEST_LOGGING=false