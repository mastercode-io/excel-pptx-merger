# Development Configuration
DEVELOPMENT_MODE=true
CLEANUP_TEMP_FILES=false
TEMP_FILE_RETENTION_SECONDS=3600
LOG_LEVEL=DEBUG

# File Processing Mode
# SAVE_FILES=false  # When false, processes files in memory for better performance
                   # When true, saves input/output files to disk for debugging
                   # Default: false (memory-only processing)

# API Configuration
API_KEY=your_api_key_here
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=xlsx,pptx

# Storage Configuration
# Options: LOCAL or GCS (Google Cloud Storage)
STORAGE_BACKEND=LOCAL
# Local storage settings (used when STORAGE_BACKEND=LOCAL)
LOCAL_STORAGE_DIR=./.temp
# Google Cloud Storage settings (used when STORAGE_BACKEND=GCS)
GCS_BUCKET_NAME=your_bucket_name
GCS_BASE_PREFIX=excel_pptx_merger
# Temporary file cleanup settings
TEMP_FILE_ENABLED=true
TEMP_FILE_DELAY_SECONDS=3600
TEMP_FILE_KEEP_ON_ERROR=true

# Zoho WorkDrive Integration (Future)
ZOHO_CLIENT_ID=your_client_id
ZOHO_CLIENT_SECRET=your_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=5000